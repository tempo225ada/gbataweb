{% extends 'admin.html.twig' %}

{% block body %}

    <div class="container">
    <div class="container mt-4">
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Demandes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"> {{ nbre_demande|length }}  </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

          <h2 class="titre-page">Liste de toutes les demandes immobilière</h2>
        <form action="{{ path('admin_list_demande_immo')}}" method="get">
            <div class="row">
                <div class="col-3">
                    <label for="filter">Commune</label>
                    <input name="commune" type="text">
                </div>
                <div class="col-3">
                    <label for="filter">Pièce</label>
                    <input name="piece" type="text">
                </div>
                <div class="col-3">    
                    <label for="filter">Budget Min</label>
                    <input name="budgetmin" type="text">
                </div>

                <div class="col-3">    
                    <label for="filter">Budget Max</label>
                    <input name="budgetmax" type="text">
                </div>
            </div>
            <button type="submit" class="btn btn-primary search">Rechercher</button>
           
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Type bien</th>
                    <th scope="col">Commune</th>
                    <th scope="col">Nombre de pièces</th>
                    <th scope="col">Budget</th>
                </tr>
            </thead>
            {% for demande in demandes %}
                <tbody>
                    <tr>
                        <td> {{ demande.type }} </td>
                        <td> {{ demande.typebien}} </td>
                        <td> {{ demande.commune}} </td>
                        <td> {{ demande.piece}} </td>
                        <td> {{ demande.budget }} </td>
                        <td> <a href="{{ path('admin_demande_immo_edit',{ id:demande.id}) }}" class="btn btn-primary">
                                Modifier</a> </td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>

         <nav aria-label="Page navigation example">{{ knp_pagination_render(demandes) }}</nav> 
    </div>

{% endblock %}