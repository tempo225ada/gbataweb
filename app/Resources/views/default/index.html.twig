{% extends 'base.html.twig' %}

{% block body %}

    <div class="slide">
        <div>
            <p class="slide-text-top container">Gbata</p>
            <img src="{{ asset('upload/slide/01.jpg' ) }}" />
            <p class="slide-text container">Service d'offre immobilière</p>
        </div>
        <div>
            <p class="slide-text-top container">Gbata service</p>
            <img src="{{ asset('upload/slide/02.jpg' ) }}" />
            <p class="slide-text container">Service facile d'ulitisation</p>
        </div>
    </div>
  
   <div class="container immo-front front">
        <p class="phone-top">Dernières offres</p>
        <div class="row">
            
        {% for immobilier in immobiliers %}

            <div class="col-sm-4 col-xs-12 offre-immo-front">
                <div class="col-12 type-immo-front"> 
                    {% if immobilier.type == 'location' %}
                        <span>{{ immobilier.type }} </span>
                    {% else %}
                        <span class="vente">{{ immobilier.type }} </span>
                    {% endif %} 
                </div>
                <div class="col-12 image-immo-front">
                    <img src="{{ asset('upload/image_immo/' ~ immobilier.imageImmo) }}" style="height:230px" />
                </div>
                <div class="col-12 autre-offre">
                    <div class="col-12 titre-immo-front">{{ immobilier.titre }}</div>
                    <div class="row row-com-bien">
                        <div class="col-6 comm-immo-front"><i class="fas fa-map-marker-alt"></i> {{ immobilier.commune }} </div>
                        <div class="col-6 bien-immo-front"> {{ immobilier.typebien }} </div>

                        {% if immobilier.bien == 'maison' %}
                    
                        <div class="col pcs"><i class="fas fa-key"></i>  {{ immobilier.piece }}</div>
                        <div class="col chbr"> <i class="fas fa-bed"></i> {{ immobilier.chambre }} </div>
                        <div class="col dwc"> <i class="fas fa-bath"></i> {{ immobilier.douche }} </div>
                    
                        {% endif %}
                    
                    </div>
                    
                    <div class="col-sm-12 loyer">
                        {{ immobilier.prix}} <span>fcfa</span>
                        {% if immobilier.type == 'location' %}
                            <span class="mois">/mois</span>
                            {% endif %}
                    </div>
                    <div class="voir-offre"><a href="{{path('contenu_immobilier', {'id': immobilier.id})}}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L12.793 8l-2.647-2.646a.5.5 0 0 1 0-.708z"/>
                        <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5H13a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8z"/>
                        </svg></a></div>
                </div>
            </div>
        {% endfor %}
        </div>
        <p class="voir-plus"><a href="{{path('list_immobilier')}}">Plus d'offre <i class="fas fa-long-arrow-alt-right"></i></a></p>
   </div>

   <div class="paralax">
       <div class="container">
            <p class="para-top">Demande en logement de <span>+ 40 000</span> par an. Trouvez un bien immobilier rime avec</p>
            <div class="row">
                <div class="col-sm-4">
                    <p><i class="fas fa-clock"></i></p>
                    <p>Temps recherche assez long</p></div>
                <div class="col-sm-4">
                    <p><i class="fas fa-money-check-alt"></i></p>
                    <p>Coût de recherche élévé</p></div>
                <div class="col-sm-4">
                    <p><i class="fas fa-times-circle"></i></p>
                    <p>Choix limité</p></div>
            </div>
        </div>
   </div>

   <div class="phone">
        <div class="container">
            <div class="row">
                <h2 class="titre-h2 col-sm-12 col-xs-12"></h2>
                <div class="col-sm-6 col-xs-12">
                    <p class="phone-top">Vous êtes à la recherche d'un bien immobilier ?</p>
                    <div class="row">
                        <div class="col-sm-4 col-xs-12">
                            <p><span>1</span></p><p>Inscrivez vous,simple et rapide</p>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <p><span>2</span></p><p>Postez votre demande</p>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <p><span>3</span></p><p>Recevez des offres par sms</p>
                        </div>
                        <p class="voir-plus col"><a href="/comment-ca-marche">Comment ça marche <i class="fas fa-long-arrow-alt-right"></i></a></p>

                    </div>
                </div>
                <div class="col-sm-6 col-image">
                        <img src="{{ asset('upload/image/phone.jpg' ) }}" /> 
                </div>
            </div>
        </div>
    </div>

    <div class="annonceur phone">
        <div class="container">
            <div class="row">
             <h2 class="titre-h2 col-sm-12 col-xs-12"></h2>
            <div class="col-sm-6 col-image">
                <img src="{{ asset('upload/image/agent.jpg' ) }}" />                 
            </div>

                <div class="col-sm-6 col-xs-12">
                    <p class="phone-top">Etes vous une agence immobilière ou un agent immobilier ?</p>
                    <div class="row">
                        <div class="col-sm-4 col-xs-12">
                            <p><span>1</span></p><p>Inscrivez vous, c'est rapide</p>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <p><span>2</span></p><p>On active votre compte et publiez</p>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <p><span>3</span></p><p>Publiez les aussi par SMS</p>
                        </div>
                        <p class="voir-plus col"><a href="/comment-ca-marche#headingThree">En savoir plus <i class="fas fa-long-arrow-alt-right"></i></a></p>

                    </div>
                </div>
                
            </div>
        </div>
    </div>

{% endblock %}
