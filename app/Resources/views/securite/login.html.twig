{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 col-xs-12 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Connectez vous</h5>
            <form class="form-signin" method="post">
              <div class="form-label-group my-4">
                <input type="email" id="username" class="form-control" placeholder="Email" name="_username" value="{{ last_username }}" required autofocus>
              </div>

              <div class="form-label-group my-2">
                <input type="password" id="password" class="form-control" placeholder="Mot de passe" name="_password" required>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase my-2" type="submit">Se connecter</button>
              <hr class="my-4">
              <div>
                <a href="/inscription"> Je n'ai pas de compte </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



